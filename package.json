{
  "name": "app",
  "version": "0.0.1",
  "engines": {
    "node": ">=8"
  },
  "private": true,
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/common/store.ts"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-tests.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "\\.tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$"
  },
  "scripts": {
    "start": "npm run build:prod",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint --type-check --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:hot": "cross-env NODE_ENV=development HOT_MODULES=true ts-node src/webpack/server",
    "server:story": "cross-env NODE_ENV=development STORYBOOK=true start-storybook -p 9001",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:story": "cross-env NODE_ENV=production STORYBOOK=true build-storybook -o $PWD/story"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.1.9",
    "@storybook/react": "^3.2.12",
    "@types/enzyme": "^2.8.11",
    "@types/globule": "^1.1.0",
    "@types/hapi": "^16.1.10",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.14",
    "@types/react": "^16.0.9",
    "@types/react-dom": "^16.0.0",
    "@types/react-hot-loader": "^3.0.3",
    "@types/react-redux": "^5.0.10",
    "@types/redux-actions": "^2.2.2",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.2",
    "@types/webpack": "^3.0.4",
    "@types/webpack-env": "^1.13.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "enzyme-to-json": "^3.1.1",
    "eslint-config-jupl": "^0.6.2",
    "file-loader": "^1.1.4",
    "globule": "^1.2.0",
    "hapi": "^16.6.2",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-enzyme": "^4.0.0",
    "normalize.css": "^7.0.0",
    "react": "^16.0.0",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^16.0.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-devtools-extension": "^2.13.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.4",
    "styled-components": "^2.1.1",
    "trash-cli": "^1.3.0",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.2.0",
    "tslint": "^5.4.3",
    "tslint-language-service": "^0.9.6",
    "tslint-react": "^3.0.0",
    "typescript": "^2.4.2",
    "wcb": "^0.5.0",
    "webpack": "^3.3.0"
  }
}
