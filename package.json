{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/common/store.ts",
      "<rootDir>/jest/"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "<rootDir>/jest/shims.ts"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      "\\.tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "npm run lint:file -- '*.ts' 'src/**/*.ts{,x}'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:hot": "cross-env NODE_ENV=development HOT_MODULES=true node-dev -r ts-node/register src/bin/app.ts",
    "server:story": "cross-env NODE_ENV=development STORYBOOK=true start-storybook -p 9001",
    "server:prod": "cross-env NODE_ENV=production ts-node --fast src/bin/app",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:story": "cross-env NODE_ENV=production STORYBOOK=true build-storybook -o $PWD/story"
  },
  "dependencies": {
    "apollo-server-hapi": "^1.2.0",
    "dotenv": "^4.0.0",
    "graphql-tools": "^2.6.1",
    "hapi": "^16.6.2",
    "inert": "^4.2.1"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.2.0",
    "@storybook/addon-actions": "^3.2.13",
    "@storybook/react": "^3.2.13",
    "@types/deepmerge": "^1.3.2",
    "@types/enzyme": "^3.1.0",
    "@types/enzyme-adapter-react-16": "^1.0.0",
    "@types/globule": "^1.1.0",
    "@types/graphql": "^0.11.5",
    "@types/hapi": "^16.1.10",
    "@types/history": "^4.6.1",
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.46",
    "@types/react": "^16.0.18",
    "@types/react-dom": "^16.0.2",
    "@types/react-hot-loader": "^3.0.4",
    "@types/react-redux": "^5.0.10",
    "@types/redux-actions": "^2.2.2",
    "@types/redux-first-router": "^1.9.6",
    "@types/redux-first-router-link": "^1.4.0",
    "@types/redux-form": "^7.0.8",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.5",
    "@types/webpack": "^3.0.13",
    "@types/webpack-env": "^1.13.2",
    "apollo-cache-inmemory": "^1.0.0",
    "apollo-client": "^2.0.1",
    "apollo-link-http": "^1.0.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.0",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "enzyme-to-json": "^3.1.4",
    "file-loader": "^1.1.5",
    "globule": "^1.2.0",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.5.0",
    "hapi-webpack-plugin": "^2.0.0",
    "history": "^4.7.2",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-enzyme": "^4.0.1",
    "node-dev": "^3.1.3",
    "normalize.css": "^7.0.0",
    "react": "^16.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-apollo": "^2.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.1.1",
    "react-redux": "^5.0.6",
    "react-test-renderer": "^16.0.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-devtools-extension": "^2.13.0",
    "redux-first-router": "0.0.16-next",
    "redux-first-router-link": "^1.4.1",
    "redux-form": "^7.1.2",
    "redux-logger": "^3.0.6",
    "styled-components": "^2.2.1",
    "trash-cli": "^1.3.0",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-immutable": "^4.4.0",
    "tslint-language-service": "^0.9.6",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3",
    "wcb": "^0.5.2",
    "webpack": "^3.8.1"
  }
}
