{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "maxNodeModuleJsDepth": 1,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es2015"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  },
  "include": [
    "src",
    "*.ts"
  ]
}
